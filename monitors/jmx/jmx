#!/bin/bash

source ../../config

java JmxMonitor kafka.Kafka ./beans ${MSGSIZE_MONITOR_INTERVAL_SEC} | 
stdbuf -oL awk -F "\"*, \"*" '{
    printf "set {\"args\": {\"msgsin_1minavg\": %.3f, ", $2
    printf "\"bytesin_1minavg\": %.3f, ", $3
    printf "\"bytesout_1minavg\": %.3f}}\n", $4
}' | nc ${METRICS_SERVER_HOST} ${METRICS_SERVER_PORT} > nc.log
